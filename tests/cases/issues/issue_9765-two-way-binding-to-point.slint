export component TestCase inherits Window {
    width: 400px;
    height: 400px;
    out property <string> res;
    l := HorizontalLayout {
        if true : Text {
            property p <=> swg.pressed-position;
            text: p.x / 1px;
            init => {
                res += "x: " + p.x / 1px + " y: " + p.y / 1px;
            }
        }
    }
    swg := SwipeGestureHandler {
    }

    init => {
        debug(l.preferred-height);
    }

    out property <bool> test: res == "x: 0 y: 0";
}